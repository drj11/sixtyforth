\ Handle command line options
: options
   BEGIN
      FALSE             \ false to break at while
      2 argc @ < IF
          1 arg -c? IF
             disable-interactive
             DROP
             2 arg
             arg-pop arg-pop
             EVALUATE
             TRUE       \ true to continue at while
          THEN
      THEN
      WHILE
   REPEAT
